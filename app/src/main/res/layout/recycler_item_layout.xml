<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <CheckBox
            android:id="@+id/Rec_View_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Rec_View_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/Rec_View_checkbox"
            android:layout_toStartOf="@+id/priorityStar"
            android:layout_marginStart="21dp"
            android:text="@string/task_name"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Rec_View_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Rec_View_text1"
            android:layout_toEndOf="@+id/Rec_View_checkbox"
            android:layout_marginStart="21dp"
            android:text="@string/task_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/priorityStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="6dp"
            android:clickable="false"
            android:button="@drawable/star_selector" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

